{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "rootDir": "src",
      "outDir": "dist"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }